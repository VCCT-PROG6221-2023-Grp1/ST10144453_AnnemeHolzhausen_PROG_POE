<Application
    x:Class="Anneme_Holzhausen_ST10144453_Prog_POE.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:Anneme_Holzhausen_ST10144453_Prog_POE"
    xmlns:view="clr-namespace:Anneme_Holzhausen_ST10144453_Prog_POE.MVM.View"
    xmlns:viewModel="clr-namespace:Anneme_Holzhausen_ST10144453_Prog_POE.MVM.View_Model"
    StartupUri="MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Theme/MenuButtonthemeDict.xaml" />
                <ResourceDictionary Source="Theme/ButtonThemeDict.xaml" />
                <ResourceDictionary Source="Theme/TextBoxThemeMenu.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <DataTemplate DataType="{x:Type viewModel:HomeViewModelClass}">
                <view:HomeViewUserControl />
            </DataTemplate>

            <DataTemplate DataType="{x:Type viewModel:RecipeNewClass}">
                <view:NewRecipeBitch />
            </DataTemplate>

            <DataTemplate DataType="{x:Type viewModel:ViewAllClass}">
                <view:ViewAllRecipesUserControl />
            </DataTemplate>

        </ResourceDictionary>
    </Application.Resources>
</Application>
